{
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 5
    },
    "plugins": [
        "import"
    ],
    "rules": {
        // disable ES6 feature
        // "no-var": 0,
        // "object-shorthand": 0,
        // "prefer-arrow-callback": 0,
         "no-undef": 0,
         "no-alert": 0,
         "space-before-function-paren": 0,
         "comma-dangle": [1, "always-multiline"],
        // "func-names": 0,

        // 缩进4格
        "indent": [
            1,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-plusplus": 0,
        // 使用windows换行符
        "linebreak-style": [
            "error",
            "windows"
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        // 强制无分号
        "semi": [
            1,
            "never"
        ]
    },
    "env": {
        "browser": false,
        "es6": false,
        "node": true
    }
}